                        <td class="col-lg-1">{{row.DocVersionID}}</td>
                        <td class="hidden">{{row.DocDistributionID}}</td>
                        <td class="col-lg-3">{{row.DocPropIdentifyName}}</td>
                        <td class="col-lg-3">{{row.MetaValue}}</td>
                        <td class="col-lg-2">{{row.OriginalReference}}</td>
