                        <th colspan="2">
                            <input placeholder="Attribute Name" class="input-sm form-control" ng-model="AttrName" type="text" />
                        </th>
                        <th>
                            <input placeholder="Attribute Value" class="input-sm form-control" ng-model="AttrValue" type="text" />
                        </th>
                        <th>
